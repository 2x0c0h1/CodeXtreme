<!doctype html>
<html>

<head>
	<% include ../partials/header %>
	<style>
		a.card {
			color: #212529;
			text-decoration: none;
		}

		a.card:hover {
			background-color: #e9ecef;
			text-decoration: none;
		}
	</style>
</head>

<body>
	<% include ../partials/navbar %>
	<div class="container">
		<div class="jumbotron">
			<h1 class="display-4">Available projects</h1>
			<p class="lead">This is the list of available components that have been put up.</p>
		</div>
		<div class="card-columns">
			<% for(var i=0; i < projects.length; i++) { %>
			<a href="/company/<%= projects[i].p_companyby%>" class="card">
				<% if (projects[i].img) {%>
				<img class="card-img-top" src="..." alt="Card image cap">
				<% } %>
				<div class="card-body">
					<h5 class="card-title">
						<%= projects[i].p_name %>
					</h5>
					<p class="card-text">
						<%= projects[i].p_description %>
					</p>
					<p class="card-text font-italic">
						<%= projects[i].c_companyname %>
					</p>
					<p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
				</div>
			</a>
			<% } %>
		</div>
	</div>
</body>

</html>